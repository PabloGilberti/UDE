{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build (Intel x86_64)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall", "-Wextra", "-Wpedantic",
        "-g",
        "-arch", "x86_64",
        "*.cpp",
        "-o", "main"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./main",
      "options": { "cwd": "${workspaceFolder}" },
      "dependsOn": "build (Intel x86_64)"
    }
  ]
}
